@model ShortLink.Web.Models.LinkViewModel
@{
    ViewData["Title"] = "Link shortener";
}

<div class="container">
    <form method="post" asp-controller="Links" asp-action="Add">
        <div class="form-group">
            <label for="link">Ссылка</label>
            <input asp-for="LongUrl" type="url" class="form-control" placeholder="http://">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <button type="submit" class="btn btn-primary">Сократить</button>
    </form>
</div>